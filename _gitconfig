[user]
	name = spriteray
	email = spriteray@gmail.com 
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	quotepath = false
	editor = vim
	pager = less -FRSX

[diff]
	external = git-diff-wrapper

[pager]
	diff =

[alias]
	history = log --color --graph --pretty=oneline --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cn:%ce, %ci)%Creset' --abbrev-commit --date=iso
	changes = log --color --pretty=fuller --abbrev-commit --date=iso --name-status -n 1
	dw = diff
	dc = diff --cached
	merges = merge --squash --allow-unrelated-histories
	commita = commit --amend
	unstage = reset HEAD --
	st = status

[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
